<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>kudu</groupId>
    <artifactId>kudu-parent</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Kudu</name>

    <description>
        Kudu.
    </description>

    <!-- Properties Management -->
    <properties>
        <protobuf.version>2.5.0</protobuf.version>
        <netty.version>3.8.0.Final</netty.version>
        <log4j.version>1.2.17</log4j.version>
        <guava.version>12.0.1</guava.version>
        <mockito-all.version>1.9.0</mockito-all.version>
        <junit.version>4.11</junit.version>
        <async.version>1.4.0</async.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <testdata.dir>target/testdata</testdata.dir>
        <antrun.version>1.7</antrun.version>
        <surefire.version>2.16</surefire.version>
        <slf4j.version>1.6.1</slf4j.version>
        <maven.assembly.version>2.2.1</maven.assembly.version>
    </properties>

    <modules>
        <module>kudu-client</module>
        <module>kudu-client-benchmark</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
